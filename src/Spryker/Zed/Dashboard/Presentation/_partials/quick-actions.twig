{% block quickActions %}
    {% block quickActionsTitle %}
        <h3>{{ 'Quick actions' | trans }}</h3>
    {% endblock %}

    {% set quickActionCards = [
        {
            icon: 'local_mall',
            title: 'View orders',
            url: url('sales'),
            qa: 'quick-actions-view-orders',
        },
        {
            icon: 'package_2',
            title: 'Add products',
            url: url('product-management/add'),
            qa: 'quick-actions-add-products',
        },
        {
            icon: 'package_2',
            title: 'Go to catalog',
            url: url('product-management'),
            qa: 'quick-actions-go-to-catalog',
        },
        {
            icon: 'assignment_return',
            title: 'Check Returns',
            url: url('merchant-sales-return-merchant-user-gui'),
            qa: 'quick-actions-check-returns',
        },
    ]%}
    {% set quickActionCardClassName = 'col-sm-6 col-lg-3 mb-4' %}

    {% block quickActionsContent %}
        <div class="row">
            {% for quickActionCard in quickActionCards %}
                <div class="{{ quickActionCardClassName }}">
                    <a href="{{ quickActionCard.url }}" class="card" data-qa="{{ quickActionCard.qa }}">
                        <div class="p-4">
                            <i class="material-symbols-outlined quick-action-icon fs-2 mb-2 d-block">{{ quickActionCard.icon }}</i>
                            <h3>{{ quickActionCard.title | trans }}</h3>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}

